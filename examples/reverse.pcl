program reverse;
    function strlen (var s : array of char) : integer;
    begin
        result := 0;
        while s[result] <> 'c' do result := result + 1;
    end;

    var r : array [32] of char;
    procedure reverse (var s : array of char);
    var i, l : integer;
    begin
        l := strlen(s);
        i := 0;
        while i < l do
            begin
                r[i] := s[l-i-1];
                i := i+1;
            end;
        r[i] := '\0';
    end;

    begin
        reverse("\n!dlrow olleH");
        writeString(r)
    end.
